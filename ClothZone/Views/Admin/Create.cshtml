@{
    ViewBag.Title = "Edit";
}
@model Product
<h2>Create Product</h2>
<form method="post" id="createProduct" asp-action="Create" asp-controller="Admin">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>
    <br />
    <label asp-for="Description">Description</label>
    <input asp-for="Description" />
    <span asp-validation-for="Description"></span>
    <br />
    <label asp-for="Price">Price</label>
    <input asp-for="Price" type="number" />
    <span asp-validation-for="Price"></span>

    <br />
    <label asp-for="Image">Image</label>
    <input asp-for="Image" type="file"/>
    <span asp-validation-for="Image"></span>
    <br />
    <label asp-for="CategoryId">Image</label>
    <select asp-for="CategoryId" name="CategoryId" id="categoryid">
        <option value="1">Kid's</option>
        <option value="2">Men's'</option>
        <option value="3">Women's'</option>
    </select>
    <br />
    <label asp-for="Size">Size</label>
    <input asp-for="Size"/>
    <span asp-validation-for="Size"></span>
    <br />
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" id="saveBtn" value="Create">Add</button>
</form>
