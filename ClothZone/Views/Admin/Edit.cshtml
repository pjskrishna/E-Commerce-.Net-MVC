@{
    ViewBag.Title = "Edit";
}
@model Product
<h2>Edit Product</h2>
<form id="editProduct" method="post">

    <input type="hidden" name="ID" value="@Model.Id" />
    <br />
    <label>Name</label>
    <input name="Name" value="@Model.Name" />
    <br />
    <label>Description</label>
    <input name="Description" value="@Model.Description" />
    <br />
    <label>Price</label>
    <input name="Price" value="@Model.Price" type="number"/>
    <br />
    <label>CategoryId</label>
    <input name="CategoryId" value="@Model.CategoryId" />
    <br />
    <label>Image</label>
    <input name="Image" value="@Model.Image" src="@Model.Image" type="file"/>
    <br />
    <label>Size</label>
    <input name="Size" value="@Model.Size" />
    <br />
    <button type="button" id="updateBtn">Update</button>

</form>

<script>
    $("#updateBtn").click(function () {

        $.ajax({
            type: 'POST',
            url: '/Admin/Edit',
            data: $("#editProduct").serialize()
        })
            .done(function (response) {
                $("#tableContainer").html(response);
                $("#Container").html("");
                //alert("done");
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAIL");
            });
    });
</script>