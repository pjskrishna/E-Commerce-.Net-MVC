@model Product 
@{
    ViewBag.Title="ViewProduct";
    IEnumerable<Product> products = ViewData["Products"] as IEnumerable<Product>;
    IEnumerable<Category> categories = ViewData["Categories"] as IEnumerable<Category>;
}

<div>
    <img src="@Model.Image" />
</div>
<h3>Name: @Model.Name</h3>
<h3>Description: @Model.Description</h3>
<h3>Size: @Model.Size</h3>
<h3>Price: @Model.Price</h3>
<h3>
    Category:
    @foreach (Category item in categories)
    {
            if(item.Id == Model.CategoryId)
            {
                ViewBag.name = item.Name;
            }
    }
    @ViewBag.name
</h3>